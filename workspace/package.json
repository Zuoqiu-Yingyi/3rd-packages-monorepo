{
    "name": "3rd-packages",
    "type": "module",
    "private": true,
    "packageManager": "pnpm@9.0.0",
    "engines": {
        "node": ">=22"
    },
    "scripts": {
        "prepare": "cd ./.. && husky ./workspace/.husky",
        "lint-staged": "lint-staged --allow-empty",
