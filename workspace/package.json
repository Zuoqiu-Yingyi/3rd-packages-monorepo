        "@commitlint/types": "^19.5.0",
        "@types/lint-staged": "^13.3.0",
        "@types/node": "^22.10.1",
        "cspell": "^8.16.1",
        "eslint": "^9.16.0",
        "husky": "^9.1.7",
        "lint-staged": "^15.2.10",
        "prettier": "^3.4.2",
        "svelte": "^5.9.0",
        "turbo": "^2.3.3",
        "typescript": "^5.7.2"
    }
